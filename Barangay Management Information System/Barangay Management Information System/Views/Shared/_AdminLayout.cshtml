    <style>

        body {
          font-family: "Segoe UI";
          background-color: #fafafa;
          min-width: 450px;
        }

        .sidenav {
          height: 100%;
          width: 250px; @**@
          position: fixed;
          z-index: 1;
          top: 0;
          left: 0;
          overflow-x: hidden;
          transition: 0.5s;
          background-color: #ffffff;
        }

        .sidenav a {
          display: block;
          transition: 0.3s;
        }

        #main {
          margin-left:250px;@**@
          transition: margin-left .5s;
        }

        @@media screen and (max-height: 450px) {
          .sidenav {padding-top: 15px;}
          .sidenav a {font-size: 18px;}
        }

        @* side nav *@

        #highlight {
            background-image: linear-gradient(100deg, #001510, #00bf8f);
        }

        @**@

        .navbar, nav {
            background-color: #ffffff;
        }

        #sidelinks a {
            font-size: 17px;
            font-weight: 600;
            padding: 10px 20px 10px 20px;
            color: #004a2f;
        }


        #sidelinks a:hover {
            background-image: linear-gradient(100deg, #001510, #00bf8f);
            color: #fafafa;
            text-decoration:none;
        }

    </style>

</head>
