@model Barangay_Management_Information_System.Models.Entity.OfficialTerm

@{
    ViewBag.Title = "Edit Term";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    #sidenav #sidelinks #barangay-officials-link {
        background-color: #ececec;
        color: #434e52;
        text-decoration: none;
    }
</style>

<div class="container">

    <h1 class="page-header-title">Official Term</h1>

    <div class="card shadow border-0 rounded p-3 mb-5">
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.OfficialTermId)
                    @Html.HiddenFor(model => model.StartYear)

                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">Start Year</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.StartYear, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.StartYear, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">End Year</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.EndYear, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EndYear, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn btn-success float-right" />
                        </div>
                    </div>
                </div>
            }

            <br />
            <br />
            <hr />
            <br />

            @if (TempData["terms"] != null)
            {

                <div class="row mb-3">

                    <div class="col-md-6">
                        <div class="form-control-plaintext border rounded pl-2 pr-2" style="font-size: 15px; font-weight:600">
                            Start Year
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-control-plaintext border rounded pl-2 pr-2" style="font-size: 15px; font-weight:600">
                            End Year
                        </div>
                    </div>

                </div>

                
                foreach (var term in TempData["terms"] as List<Barangay_Management_Information_System.Models.Entity.OfficialTerm>)
                {
                    <div class="row mb-3">

                        <div class="col-md-6">
                            <div class="form-control-plaintext border rounded pl-2 pr-2" style="font-size: 15px">
                                <span>@term.StartYear</span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-control-plaintext border rounded pl-2 pr-2" style="font-size: 15px">
                                <span>@term.EndYear</span>
                            </div>
                        </div>

                    </div>
                }
            }

        </div>
    </div>

</div>