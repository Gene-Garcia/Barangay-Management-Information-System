@model IEnumerable<Barangay_Management_Information_System.Models.Entity.ResidentsInformation>

@{
    ViewBag.Title = "Barangay Clearance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    #sidenav #sidelinks #barangay-clearance-link {
        background-color: #ececec;
        color: #434e52;
        text-decoration: none;
    }
</style>

<div class="container">

    <h1 class="page-header-title">Residents List for Barangay Clearance</h1>

    <div class="card shadow border-0 rounded p-3 mb-5">
        <div class="card-body table-responsive">

            <table class="table table-hover w-100 dt-responsive nowrap" id="table">
                <thead>
                    <tr>
                        <th class="font-weight-bold">
                            Last Name
                        </th>
                        <th class="font-weight-bold">
                            First Name
                        </th>
                        <th class="font-weight-bold">
                            Middle Name
                        </th>
                        <td class="font-weight-bold">
                            Generate Clearance
                        </td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="redirect('@item.ResidentId')">
                            <td class="font-weight-bold">
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td class="">
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td class="">
                                @Html.DisplayFor(modelItem => item.MiddleName)
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm shadow" onclick="redirect('@item.ResidentId')"><span class="fa fa-print p-1" style="font-size:17px"></span></button>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>

@section scripts{

    <script>

        function redirect(residentId) {
            var url = "/BarangayClearance/View?residentId=" + residentId;

            window.location.href = url;
        }

        $(document).ready(function () {
            $('#table').DataTable({
                "order": [[0, "asc"]]
            });
        });
    </script>
    
}
